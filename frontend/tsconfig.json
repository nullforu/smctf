{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "moduleResolution": "Bundler",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "types": ["svelte"],
        "allowJs": false,
        "checkJs": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.svelte"]
}
